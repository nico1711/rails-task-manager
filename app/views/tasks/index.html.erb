<h1>My Tasks</h1>

<ul class="p-0">
  <% @tasks.each do |t| %>
    <li class="mt-3">
      <input type="checkbox" disabled="disabled" name="completed" <%= t.completed ? 'checked' : "" %>> <%= link_to t.title, task_path(t) %>
      <%= link_to '', destroy_task_path(t), method: :delete, data: {confirm: 'are you sure?'}, :class=> "far fa-trash-alt" %>
      <br>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "+ Add a new task", tasks_new_path %>
